{
   "extends": ["stylelint-config-standard"],
   "rules": {
      "at-rule-no-unknown": [
         true,
         {
            "ignoreAtRules": [
               "tailwind",
               "apply",
               "variants",
               "responsive",
               "screen",
               "layer",
               "theme",
               "custom-variant",
               "import"
            ]
         }
      ],
      "function-no-unknown": [
         true,
         {
            "ignoreFunctions": ["theme", "screen"]
         }
      ]
   }
}
